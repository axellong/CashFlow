<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">

<!--MYSQL -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/cashFlow</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="show_sql">True</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping resource="hibernete/Clasificacion.hbm.xml"/>
        <mapping resource="hibernete/Categoria.hbm.xml"/>
        <mapping resource="hibernete/ClasificacionIndicadores.hbm.xml"/>
        <mapping resource="hibernete/RegistroEfectivo.hbm.xml"/>
        <mapping resource="hibernete/RegistroIndicadores.hbm.xml"/>
        <mapping resource="hibernete/ReportesEfectivo.hbm.xml"/>
        <mapping resource="hibernete/ReportesIndicadores.hbm.xml"/>
        <mapping resource="hibernete/SubCategoria.hbm.xml"/>
        <mapping resource="hibernete/Usuario.hbm.xml"/>
        <mapping resource="hibernete/Cuenta.hbm.xml"/>

    </session-factory>
</hibernate-configuration>
